#!/bin/sh

version_number="4.10.1"

# UI

external_menu() {
    rofi "$1" -sort -dmenu -i -width 1500 -p "$2" "$3"
}

# Enhanced loading animation with progress and spinners
show_loading_animation() {
    local message="$1"
    local duration="${2:-1}"
    
    # Terminal-safe ASCII spinner animation
    local spinners="|/-\\"
    local delay=0.1
    local loops=$((duration * 10))
    
    for i in $(seq 1 $loops); do
        local spinner_char=$(echo "$spinners" | cut -c $((($i % 4) + 1)))
        printf "\r\033[1;36m[\033[1;35m%s\033[1;36m] \033[1;35m%s\033[0m" "$spinner_char" "$message"
        sleep $delay
    done
    
    printf "\r\033[1;32m[âœ“]\033[0m \033[1;36m%s\033[0m \033[1;32mcomplete!\033[0m\n" "$message"
}

# Animated text with typewriter effect
typewriter_effect() {
    local text="$1"
    local delay="${2:-0.05}"
    
    for i in $(seq 1 ${#text}); do
        printf "%c" "$(echo "$text" | cut -c $i)"
        sleep "$delay"
    done
    printf "\n"
}

# Progress bar animation with ASCII characters
progress_bar() {
    local current="$1"
    local total="$2"
    local width=40
    local percentage=$((current * 100 / total))
    local filled=$((current * width / total))
    
    printf "\r\033[1;34m["
    for i in $(seq 1 $filled); do printf "#"; done
    for i in $(seq $((filled + 1)) $width); do printf "."; done
    printf "] %d%% \033[0m" "$percentage"
    
    [ "$current" -eq "$total" ] && printf "\n"
}

# Smooth menu transition effects
menu_transition() {
    local direction="${1:-down}"
    local lines="${2:-3}"
    
    case "$direction" in
        "down")
            for i in $(seq 1 $lines); do
                printf "\033[1;35m>>>\033[0m"
                sleep 0.1
            done
            ;;
        "up")
            for i in $(seq 1 $lines); do
                printf "\033[1;33m<<<\033[0m"
                sleep 0.1
            done
            ;;
    esac
    printf "\n"
}

# Enhanced ASCII art banner
show_ascii_banner() {
    printf "\033[1;35m\n"
    printf "     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—    â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— \n"
