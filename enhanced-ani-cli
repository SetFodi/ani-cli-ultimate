      -S, --select-nth
        Select nth entry
      -q, --quality
        Specify the video quality
      -v, --vlc
        Use VLC to play the video
      -V, --version
        Show the version of the script
      -h, --help
        Show this help message and exit
      -e, --episode, -r, --range
        Specify the number of episodes to watch
      --dub
        Play dubbed version
      --rofi
        Use rofi instead of fzf for the interactive menu
      --skip
        Use ani-skip to skip the intro of the episode (mpv only)
      --no-detach
        Don't detach the player (useful for in-terminal playback, mpv only)
      --exit-after-play
        Exit the player, and return the player exit code (useful for non interactive scenarios, mpv only)
      --skip-title <title>
        Use given title as ani-skip query
      -N, --nextep-countdown
        Display a countdown to the next episode
      -U, --update
        Update the script
    
    ** NEW UNIQUE FEATURES:
      -W, --watchlist
        Show your personal watchlist
      -F, --favorites  
        Show your favorite anime
      -L, --later
        Show your watch later queue
      --dashboard
        Show stats dashboard with viewing analytics
      --add-watchlist <anime>
        Quick add anime to watchlist
      --add-favorite <anime>
        Quick add anime to favorites
    Some example usages:
      %s -q 720p banana fish
      %s --skip --skip-title \"one piece\" -S 2 one piece
      %s -d -e 2 cyberpunk edgerunners
      %s --vlc cyberpunk edgerunners -q 1080p -e 4
      %s blue lock -e 5-6
      %s -e \"5 6\" blue lock
    \n" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}" "${0##*/}"
    exit 0
}

version_info() {
    printf "%s\n" "$version_number"
    exit 0
}

update_script() {
    update="$(curl -s -A "$agent" "https://raw.githubusercontent.com/pystardust/ani-cli/master/ani-cli")" || die "Connection error"
    update="$(printf '%s\n' "$update" | diff -u "$0" -)"
    if [ -z "$update" ]; then
        printf "Script is up to date :)\n"
    else
        if printf '%s\n' "$update" | patch "$0" -; then
            printf "Script has been updated\n"
        else
            die "Can't update for some reason!"
        fi
    fi
    exit 0
}

# checks if dependencies are present
dep_ch() {
    for dep; do
        command -v "${dep%% *}" >/dev/null || die "Program \"${dep%% *}\" not found. Please install it."
    done
}

where_iina() {
    if [ -e "/Applications/IINA.app/Contents/MacOS/iina-cli" ]; then
        echo "/Applications/IINA.app/Contents/MacOS/iina-cli" && return 0
    elif command -v "iina" >/dev/null 2>&1; then
        echo "iina" && return 0
    fi
    printf "%s" "iina" && return 0
}

where_mpv() {
    command -v "flatpak" >/dev/null && flatpak info io.mpv.Mpv >/dev/null 2>&1 && printf "%s" "flatpak_mpv" && return 0
    printf "%s" "mpv" && return 0
}

# Enhanced player detection with IINA priority on macOS
detect_best_player() {
    local detected_player=""
    local player_info=""
    
    # Check if running on macOS
    if [ "$(uname)" = "Darwin" ]; then
        # Prioritize IINA on macOS for best experience
        if command -v iina >/dev/null 2>&1; then
            detected_player="iina"
            player_info="IINA (CLI) - Premium macOS Experience"
        elif [ -e "/Applications/IINA.app/Contents/MacOS/iina-cli" ]; then
            detected_player="/Applications/IINA.app/Contents/MacOS/iina-cli"
            player_info="IINA (App) - Premium macOS Experience"
        # Check for other modern macOS players
        elif [ -e "/Applications/VLC.app/Contents/MacOS/VLC" ]; then
            detected_player="/Applications/VLC.app/Contents/MacOS/VLC"
            player_info="VLC (macOS App)"
        fi
        
        if [ -n "$detected_player" ]; then
            printf "\033[1;32m[VIDEO]\033[0m %s\n" "$player_info" >&2
            printf "%s" "$detected_player" && return 0
        fi
    fi
    
    # Check for mpv with better detection
    if command -v mpv >/dev/null 2>&1; then
        # Check mpv version for better info
        local mpv_version=$(mpv --version 2>/dev/null | head -n1 | cut -d' ' -f2 2>/dev/null || echo "unknown")
        printf "\033[1;33m[VIDEO]\033[0m MPV v%s - High Performance\n" "$mpv_version" >&2
        where_mpv && return 0
    fi
    
    # Check for VLC
    if command -v vlc >/dev/null 2>&1; then
        printf "\033[1;31m[VIDEO]\033[0m VLC - Basic Support\n" >&2
        echo "vlc" && return 0
    fi
    
    # Check for other players
    for player in "celluloid" "gtk-mpv" "gnome-mpv" "smplayer"; do
        if command -v "$player" >/dev/null 2>&1; then
            printf "\033[1;34m[VIDEO]\033[0m %s - Alternative Player\n" "$player" >&2
            echo "$player" && return 0
        fi
    done
    
    printf "\033[1;31m[WARNING]\033[0m No suitable video player found\n" >&2
    printf "\033[1;33m[INSTALL]\033[0m Recommended: mpv, iina (macOS), or vlc\n" >&2
    return 1
}

