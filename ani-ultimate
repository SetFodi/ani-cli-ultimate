# Main function
main() {
    # Check dependencies
    local missing_deps=()
    
    if ! command -v ani-cli >/dev/null 2>&1; then
        missing_deps+=("ani-cli")
    fi
    
    if ! command -v jq >/dev/null 2>&1; then
        missing_deps+=("jq")
    fi
    
    if ! command -v curl >/dev/null 2>&1; then
        missing_deps+=("curl")
    fi
    
    if [[ ${#missing_deps[@]} -gt 0 ]]; then
        echo -e "${RED}${BOLD}âŒ Missing dependencies:${RESET}"
        for dep in "${missing_deps[@]}"; do
            echo -e "  ${YELLOW}$dep${RESET}"
        done
        echo ""
        echo -e "${CYAN}Install with:${RESET}"
        echo -e "  ${GREEN}brew install ${missing_deps[*]}${RESET}"
        exit 1
    fi
    
    case "${1:-}" in
        "--help"|"-h"|"")
            show_help
            ;;
        *)
            enhanced_anime_search "$1"
            ;;
    esac
}

main "$@" 